# ==========================================
# 数据模式配置
# ==========================================

# 使用 Mock 数据模式（开发环境，无需数据库）
USE_MOCK_DATA=true

# 使用本地 SQLite 数据库（本地开发）
# 设置为 true 时使用本地 SQLite，需要在 USE_MOCK_DATA=false 时生效
USE_LOCAL_DB=false
LOCAL_DB_PATH=./local.db

# ==========================================
# CloudFlare D1 配置（生产环境）
# ==========================================

# CloudFlare Account ID
# 在 Cloudflare Dashboard 右侧获取
CLOUDFLARE_ACCOUNT_ID=your-account-id

# D1 Database ID
# 创建 D1 数据库后获取: wrangler d1 list
CLOUDFLARE_DATABASE_ID=your-database-id

# D1 API Token
# 在 Cloudflare Dashboard -> My Profile -> API Tokens 创建
# 权限: D1:Edit
CLOUDFLARE_D1_TOKEN=your-api-token

# ==========================================
# Better Auth 认证配置
# ==========================================

# 生成命令: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key
BETTER_AUTH_URL=http://localhost:3000
